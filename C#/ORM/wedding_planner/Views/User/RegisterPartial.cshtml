@model User

<form asp-controller="User" asp-action="Register" class="form-signin d-inline-block align-middle mr-5" method="post" novalidate>
    <h1 class="h3 mb-2 font-weight-normal text-center">Registration</h1>
    
    <div class="invalid-feedback d-block"><span asp-validation-for="FirstName"></span></div>
    <div class="invalid-feedback d-block"><span asp-validation-for="LastName"></span></div>
    <div class="invalid-feedback d-block"><span asp-validation-for="Email"></span></div>
    <div class="invalid-feedback d-block"><span asp-validation-for="Password"></span></div>
    <div class="invalid-feedback d-block mb-2"><span asp-validation-for="Confirm"></span></div>

    <input asp-for="FirstName" class="form-control" placeholder="First Name" required>
    
    <input asp-for="LastName" class="form-control" placeholder="Last Name" required>

    <input asp-for="Email" class="form-control" placeholder="Email Address" required>
    
    <input asp-for="Password" class="form-control" placeholder="Password" required>
    
    <input asp-for="Confirm" class="form-control rounded-bottom" placeholder="Confirm Password" required>
    
    <button class="btn btn-lg btn-primary btn-block" id = 'regsubmit' type="submit">Register</button>
</form>