@{
    ViewData["Title"] = "Add a Dish";
    @model Dish
}

<h1 class="text-center">Add a Dish!</h1>

<form asp-controller="Home" asp-action="AddDish" method="Post">
  <div class="form-row">
    <div class="form-group col-md-4">
      <label asp-for="Name"></label>
      <input asp-for="Name" class="form-control">
      <div class="invalid-feedback d-block"><span asp-validation-for="Name"></span></div>
    </div>
  </div>

  <div class="form-row">
    
    <div class="form-group col-md-2">
      <label asp-for="ChefId"></label>
      <select asp-for="ChefId" class="form-control">
          <option selected disabled>Choose a chef...</option>
          @foreach(Chef chef in ViewBag.Chefs)
          {
              <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
          }
      </select>
      <div class="invalid-feedback d-block"><span asp-validation-for="ChefId"></span></div>
    </div>

    <div class="form-group col-md-1">
        <label asp-for="Calories"></label>
        <input asp-for="Calories" class="form-control">
        <div class="invalid-feedback d-block"><span asp-validation-for="Calories"></span></div>
    </div>
    
    <div class="form-group col-md-1">
        <label asp-for="Tastiness"></label>
        <select asp-for="Tastiness" class="form-control">
            <option value="" selected disabled></option>
            @for(int i = 1; i <=5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <div class="invalid-feedback d-block"><span asp-validation-for="Tastiness"></span></div>
    </div>
  </div>

  <div class="form-row">
      <div class="form-group col-md-4">
          <label asp-for="Description"></label>
          <textarea asp-for="Description" class="form-control"></textarea>
          <div class="invalid-feedback d-block"><span asp-validation-for="Description"></span></div>
      </div>
  </div>

  <button type="submit" class="btn btn-primary">Add Dish</button>
  <a href="/" class="btn btn-secondary ml-2">Home</a>
</form>
