@{
    ViewData["Title"] = "Dishes";
    @model List<Dish>
}

<ul class="nav nav-tabs justify-content-center mt-3">
    <li class="nav-item">
        <a href="/" class="nav-link">Chefs</a>
    </li>
    <li class="nav-item">
        <a href="dishes" class="nav-link active">Dishes</a>
    </li>
</ul>

<h1 class="border-bottom border-dark mt-3 pb-3 d-inline-block pr-5 ml-3">List of Dishes</h1>

<table class="table table-striped overflow-auto w-50 h-75">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Chef</th>
            <th scope="col">Tastiness</th>
            <th scope="col">Calories</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Dish dish in Model)
        {
            <tr>
                <td>@dish.Name</td>
                <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
                <td>@dish.Tastiness</td>
                <td>@dish.Calories</td>
            </tr>
        }
    </tbody>
</table>

<a href="dishes/new" class="btn btn-primary ml-2">Add a Dish</a>