@{
    @model Dish
    ViewData["Title"] = "Edit " + @Model.Name;

}
<div class="mx-auto mt-4">
    <h5><a href="/">Home</a></h5>
    <h1 class="text-center mb-2">Edit @Model.Name!</h1>
    <form asp-controller="HOME" asp-action="Edit" method="post" class="mt-3 w-25">
        <p style="color:red"><span asp-validation-for="Chef"></span></p>
        <p style="color:red"><span asp-validation-for="Name"></span></p>
        <p style="color:red"><span asp-validation-for="Tastiness"></span></p>
        <p style="color:red"><span asp-validation-for="Calories"></span></p>
        <p style="color:red"><span asp-validation-for="Description"></span></p>
        <input type="hidden" name="id" value="@Model.id">
        <div class="form-group">
            <input asp-for="Chef" class="form-control" value="@Model.Chef">
        </div>
        <div class="form-group">
            <input asp-for="Name" class="form-control" value="@Model.Name">
        </div>
        <div class="form-group">
            <input asp-for="Calories" class="form-control" placeholder="Calories">
        </div>
        <div class="form-group">
            <select asp-for="Tastiness">
                <option value="Tastiness" selected disabled>Tastiness</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="form-group">
            <textarea asp-for="Description" rows="3" class="w-100">@Model.Description</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Edit Dish</button>
        
    </form>
</div>
