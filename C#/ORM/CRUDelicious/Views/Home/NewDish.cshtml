@{
    ViewData["Title"] = "Add a Dish";
    @model Dish
}
<div class="mx-auto mt-4">
    <h5><a href="/">Home</a></h5>
    <h1 class="text-center mb-2">Add a new Dish!</h1>
    <form asp-controller="HOME" asp-action="AddDish" method="post" class="mt-3 w-25">
        <p style="color:red"><span asp-validation-for="Chef"></span></p>
        <p style="color:red"><span asp-validation-for="Name"></span></p>
        <p style="color:red"><span asp-validation-for="Tastiness"></span></p>
        <p style="color:red"><span asp-validation-for="Calories"></span></p>
        <p style="color:red"><span asp-validation-for="Description"></span></p>
        <div class="form-group">
            <input asp-for="Chef" class="form-control" placeholder="Chef's Name">
        </div>
        <div class="form-group">
            <input asp-for="Name" class="form-control" placeholder="Name of Dish">
        </div>
        <div class="form-group">
            <input asp-for="Calories" class="form-control" placeholder="Calories">
        </div>
        <div class="form-group">
            <select asp-for="Tastiness">
                <option value="Tastiness" selected disabled>Tastiness</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="form-group">
            <textarea asp-for="Description" rows="3" placeholder="Description" class="w-100"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add Dish</button>
    </form>
</div>
