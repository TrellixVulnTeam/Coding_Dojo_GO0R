@{
    ViewData["Title"] = "Products";
}
@model Product
<ul class="nav nav-tabs justify-content-center mt-3">
    <li class="nav-item">
        <h1><a href="" class="nav-link active">Products</a></h1>
    </li>
    <li class="nav-item">
        <h1><a href="/categories" class="nav-link">Categories</a></h1>
    </li>
</ul>

<div class="row mt-5">
    <div class="col border-right border-secondary">
        <h3 class="text-center">New Product</h3>
        <form asp-controller="Home" asp-action="AddProduct" method="post" class="text-center mt-3">
            <div class="form-row justify-content-center">
                <div class="form-group col-md-6">
                    <input class="form-control" asp-for="Name" placeholder="Name">
                    <div class="invalid-feedback d-block"><span asp-validation-for="Name"></span></div>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="form-group col-md-6">
                    <input class="form-control" asp-for="Price" placeholder=
                    "Price">
                    <div class="invalid-feedback d-block"><span asp-validation-for="Price"></span></div>
                </div>
            </div>
            <div class="form-row justify-content-center">
                <div class="form-group col-md-6">
                    <textarea asp-for=Description class="form-control" placeholder="Description"></textarea>
                    <div class="invalid-feedback d-block"><span asp-validation-for="Description"></span></div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>

    <div class="col">
        <h3 class="text-center">Existing Products</h3>
        <ul class="list-group ml-3 mt-3">
            @foreach(Product product in ViewBag.AllProducts)
            {
                <li class="list-group-item border-0 pt-0">
                <a href="products/@product.ProductId">@product.Name</a>
            </li>
            }
        </ul>
    </div>
</div>