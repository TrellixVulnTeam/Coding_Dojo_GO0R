@{
    ViewData["Title"] = "Home";
    @model Quote
}

<div class="text-center w-50 mx-auto">
    <h1>Welcome to QuotingDojo!</h1>
    <form asp-controller="Home" asp-action="AddQuote" method="post">
        <div class="form-group">
            <input class="form-control" asp-for="_Name" placeholder="Your name">
            <p style="color:red"><span asp-validation-for="_Name"></span></p>
        </div>
        <div class="form-group">
            <textarea rows="3" class="form-control" asp-for="_Quote" placeholder="Your quote..."></textarea>
            <p style="color:red"><span asp-validation-for="_Quote"></span></p>
        </div>
        <button type="submit" class="btn btn-primary">Add my quote!</button>
        <a href="quotes" class="btn btn-secondary">Skip to quotes!</a>
    </form>
</div>