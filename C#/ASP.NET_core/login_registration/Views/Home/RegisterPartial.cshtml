@model Registration

<form asp-controller="Home" asp-action="Register" class="form-signin d-inline-block align-middle mr-5" method="post" novalidate>
    <h1 class="h3 mb-3 font-weight-normal text-center">Registration</h1>
    
    <p style="color:red"><span asp-validation-for="FirstName"></span></p>
    <p style="color:red"><span asp-validation-for="LastName"></span></p>
    <p style="color:red"><span asp-validation-for="RegistrationEmail"></span></p>
    <p style="color:red"><span asp-validation-for="RegistrationPassword"></span></p>
    <p style="color:red"><span asp-validation-for="ConfirmPassword"></span></p>

    <input asp-for="FirstName" class="form-control" placeholder="First Name" required>
    
    <input asp-for="LastName" class="form-control" placeholder="Last Name" required>

    <input asp-for="RegistrationEmail" class="form-control" placeholder="Email Address" required>
    
    <input asp-for="RegistrationPassword" class="form-control" placeholder="Password" required>
    
    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" required>
    
    <button class="btn btn-lg btn-primary btn-block" id = 'regsubmit' type="submit">Register</button>
</form>